<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/start_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.14"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        android:autoSizeTextType="uniform"
        android:text="시작"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/minus_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.14"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.07"
        android:text="-"
        android:autoSizeTextType="uniform"
        app:layout_constraintLeft_toRightOf="@+id/start_btn"
        tools:ignore="MissingConstraints" />
    
    <TextView
        android:id="@+id/number_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.14"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        android:text="2"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/minus_btn"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/plus_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.14"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.07"
        android:text="+"
        android:autoSizeTextType="uniform"
        app:layout_constraintLeft_toRightOf="@+id/number_text"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/text_btn"
        android:text="입력"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.14"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.07"
        android:autoSizeTextType="uniform"
        app:layout_constraintLeft_toRightOf="@+id/plus_btn"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.14"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.07"
        android:text="■"
        android:autoSizeTextType="uniform"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toRightOf="@+id/text_btn"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/end_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.14"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.07"
        android:text="종료"
        android:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horse_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/plus_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:listitem="@layout/horse_item_list" />

</androidx.constraintlayout.widget.ConstraintLayout>